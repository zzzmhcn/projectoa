    <select id="selectLastOneByReceiveID" resultType="java.util.Map">
        SELECT
            notices.id,
            notices.title,
            notices.notice,
            notices.create_time,
            users.realname
        FROM
            notices
        INNER JOIN users ON users.id = notices.send_id
        WHERE
